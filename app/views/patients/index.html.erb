<h1>Listing patients</h1>

<table>
  <thead>
    <tr>
      <th>Mrn</th>
      <th>Family name</th>
      <th>Given name</th>
      <th>Dob</th>
      <th>Sex</th>
      <th>Photo file name</th>
      <th>Photo content type</th>
      <th>Photo file size</th>
      <th>Photo updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.mrn %></td>
        <td><%= patient.family_name %></td>
        <td><%= patient.given_name %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.sex %></td>
        <td><%= patient.photo_file_name %></td>
        <td><%= patient.photo_content_type %></td>
        <td><%= patient.photo_file_size %></td>
        <td><%= patient.photo_updated_at %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

