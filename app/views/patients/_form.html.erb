<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :mrn %>
    <%= f.input :family_name %>
    <%= f.input :given_name %>
    <%= f.input :dob %>
    <%= f.input :sex %>
    <%= f.input :photo_file_name %>
    <%= f.input :photo_content_type %>
    <%= f.input :photo_file_size %>
    <%= f.input :photo_updated_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
