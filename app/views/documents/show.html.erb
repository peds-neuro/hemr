<%- model_class = Document -%>
<div class="page-header">
  <h1><%=t '.title', :default => Document %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source_author) %></dt>
      <dd><pre class="prettyprint"><%= @document.source_author %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source_institution) %></dt>
      <dd><pre class="prettyprint"><%= @document.source_institution %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:department) %></dt>
      <dd><pre class="prettyprint"><%= @document.department %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:type) %></dt>
      <dd><pre class="prettyprint"><%= @document.type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @document.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:body) %></dt>
      <dd><pre class="prettyprint"><%= @document.body %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:structured_data) %></dt>
      <dd><pre class="prettyprint"><%= @document.structured_data %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:default_view) %></dt>
      <dd><pre class="prettyprint"><%= @document.default_view %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source_file_filename) %></dt>
      <dd><pre class="prettyprint"><%= @document.source_file_filename %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source_file_content_type) %></dt>
      <dd><pre class="prettyprint"><%= @document.source_file_content_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source_file_file_size) %></dt>
      <dd><pre class="prettyprint"><%= @document.source_file_file_size %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:source_file_updated_at) %></dt>
      <dd><pre class="prettyprint"><%= @document.source_file_updated_at %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              documents_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_document_path(@document), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              document_path(@document),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

