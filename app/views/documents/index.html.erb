<h1>Listing documents</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>User</th>
      <th>Source author</th>
      <th>Source institution</th>
      <th>Department</th>
      <th>Type</th>
      <th>Title</th>
      <th>Body</th>
      <th>Structured data</th>
      <th>Default view</th>
      <th>Source file filename</th>
      <th>Source file content type</th>
      <th>Source file file size</th>
      <th>Source file updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.patient %></td>
        <td><%= document.user %></td>
        <td><%= document.source_author %></td>
        <td><%= document.source_institution %></td>
        <td><%= document.department %></td>
        <td><%= document.type %></td>
        <td><%= document.title %></td>
        <td><%= document.body %></td>
        <td><%= document.structured_data %></td>
        <td><%= document.default_view %></td>
        <td><%= document.source_file_filename %></td>
        <td><%= document.source_file_content_type %></td>
        <td><%= document.source_file_file_size %></td>
        <td><%= document.source_file_updated_at %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

