<%- model_class = Document -%>
<div class="page-header">
  <h1><%=t '.title', :default => Document %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:source_author) %></th>
      <th><%= model_class.human_attribute_name(:source_institution) %></th>
      <th><%= model_class.human_attribute_name(:department) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:body) %></th>
      <th><%= model_class.human_attribute_name(:structured_data) %></th>
      <th><%= model_class.human_attribute_name(:default_view) %></th>
      <th><%= model_class.human_attribute_name(:source_file_filename) %></th>
      <th><%= model_class.human_attribute_name(:source_file_content_type) %></th>
      <th><%= model_class.human_attribute_name(:source_file_file_size) %></th>
      <th><%= model_class.human_attribute_name(:source_file_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.id %></td>
        <td><%= document.source_author %></td>
        <td><%= document.source_institution %></td>
        <td><%= document.department %></td>
        <td><%= document.type %></td>
        <td><%= document.title %></td>
        <td><%= document.body %></td>
        <td><%= document.structured_data %></td>
        <td><%= document.default_view %></td>
        <td><%= document.source_file_filename %></td>
        <td><%= document.source_file_content_type %></td>
        <td><%= document.source_file_file_size %></td>
        <td><%= document.source_file_updated_at %></td>
        <td><%=l document.created_at, format: :long %></td>
        <td>
          <%= link_to document_path(document), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to document_path(document), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_document_path,
            :class => 'btn btn-primary' %>
